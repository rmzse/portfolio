.title-bar{"data-hide-for" => "medium", "data-responsive-toggle" => "main-menu"}
  %button.menu-icon{"data-toggle" => "", :type => "button"}
  .title-bar-title Menu
#main-menu.top-bar
  .top-bar-left
    %ul.dropdown.menu{"data-dropdown-menu" => ""}
      %li.menu-text Site Title
  .top-bar-right
    %ul.menu{"data-responsive-menu" => "drilldown medium-dropdown"}
      %li.has-submenu
        %a{:href => "#"} One
        %ul.submenu.menu.vertical{"data-submenu" => ""}
          %li
            %a{:href => "#"} One
          %li
            %a{:href => "#"} Two
          %li
            %a{:href => "#"} Three
      %li
        %a{:href => "#"} Two
      %li
        %a{:href => "#"} Three
