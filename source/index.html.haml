.row.align-stretch.align-center.text-center.expanded.small-collapse.medium-collapse.large-collapse
  -# %button.md-trigger{"data-modal" => "modal-1"} Fade in & Scale
  - data.projects.each do |project|
    .columns.align-center.small-12.small-collapse.medium-3.medium-collapse.large-4.large-collapse.end
      -# .columns.align-stretch.small-6.small-collapse.medium-3.medium-collapse.large-4.large-collapse.end
      .holder.text-center{class: [!project.finished? && "unfinished"] }
        .row.align-stretch.align-center.text-center
          .row
            .columns
              .name= project[:name]
              .description= project[:description]
        .row
          .columns.holder-body
            - if !project.finished?
              = '(unfinished)'

        .row
          .columns.small-10.small-offset-1.medium-10.medium-offset-1.large-10.large-offset-1.end
            .row.align-justify.link-n-gh{style: "border: 1px solid green"}
              .columns.small-2.medium-2.large-2.link{style: "border: 1px solid red"}
                - if project[:lnk] == 'lnk'
                  = 'lnk'
                - else
                  = link_to 'lnk', project[:lnk], target: '_blank'

                  -# //these two lines trow a WEIRD err!!
